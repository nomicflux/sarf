{
  "name": "sarf-extension",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "build:wiktionary": "npx tsx ../scripts/build-wiktionary.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.36",
    "jsdom": "^28.1.0",
    "typescript": "latest",
    "vite-plugin-top-level-await": "latest",
    "vite-plugin-wasm": "latest",
    "vitest": "latest",
    "wxt": "latest"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.6"
  }
}
